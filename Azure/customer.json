{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.2",
    "parameters": {
        "namePrefix": {
            "type": "string",
            "metadata": {
                "description": "Name to prefix all resources created (keep short)!"
            },
            "defaultValue": "[resourceGroup().name]"
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine."
            },
            "defaultValue": "myadmin"
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine."
            }
        },
        "netNumber": {
            "type": "string",
            "metadata": {
                "description": "2 first octets of IPv4 address!"
            },
            "defaultValue": "10.0"
        }
    },
    "variables": {
        "templatelinks": {
            "winserver": "[uri(deployment().properties.templateLink.uri, 'winserver.json')]",
            "networks": "[uri(deployment().properties.templateLink.uri, 'networks.json')]",
            "storage": "[uri(deployment().properties.templateLink.uri, 'storage.json')]"
        },
        "virtualNetworkName": "[concat(parameters('namePrefix'), '-StandardNetwork')]",
        "storageAccountName": "[toLower(concat(parameters('namePrefix'), uniquestring(resourceGroup().id)))]"
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "[variables('storageAccountName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templatelinks').storage]",
                    "contentVersion": "1.0.0.2"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('storageAccountName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2015-01-01",
            "name": "[variables('virtualNetworkName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templatelinks').networks]",
                    "contentVersion": "1.0.0.2"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[variables('virtualNetworkName')]"
                    },
                    "netNumber": {
                        "value": "[parameters('netNumber')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2015-01-01",
            "name": "vm-dc01",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "[variables('virtualNetworkName')]",
                "[variables('storageAccountName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templatelinks').winserver]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmName": {
                        "value": "[concat(parameters('namePrefix'), 'DC01')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkName": {
                        "value": "[variables('virtualNetworkName')]"
                    },
                    "subnetName": {
                        "value": "Internal"
                    },
                    "storageAccountName": {
                        "value": "[variables('storageAccountName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2015-01-01",
            "name": "vm-adfs01",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "[variables('virtualNetworkName')]",
                "[variables('storageAccountName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templatelinks').winserver]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmName": {
                        "value": "[concat(parameters('namePrefix'), 'ADFS01')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkName": {
                        "value": "[variables('virtualNetworkName')]"
                    },
                    "subnetName": {
                        "value": "Internal"
                    },
                    "storageAccountName": {
                        "value": "[variables('storageAccountName')]"
                    }
                }
            }
        }
    ]
}