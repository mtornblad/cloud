{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "namePrefix": {
            "type": "string",
            "metadata": {
                "description": "Name to prefix all resources created (keep short)!"
            },
            "defaultValue": "C1-"
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine."
            },
            "defaultValue": "myadmin"
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine."
            }
        },
        "netNumber": {
            "type": "string",
            "metadata": {
                "description": "2 first octets of IPv4 address!"
            },
            "defaultValue": "10.0"
        },
        "domainName": {
            "type": "string",
            "metadata": {
                "description": "Name of Active Directory Domain"
            },
            "defaultValue": "contoso.com"
        }
    },
    "variables": {
        "templatelinks": {
            "winserver": "[uri(deployment().properties.templateLink.uri, 'winserver.json')]",
            "networks": "[uri(deployment().properties.templateLink.uri, 'networks.json')]",
            "storage": "[uri(deployment().properties.templateLink.uri, 'storage.json')]"
        },
        "scriptlinks": {
            "dcpromo": "https://raw.githubusercontent.com/mtornblad/cloud/master/Windows/dcpromo.ps1"
        },
        "_artifactsLocation": "https://raw.githubusercontent.com/mtornblad/cloud/master",
        "_artifactsLocationSasToken": "",
        "virtualNetworkName": "[concat(parameters('namePrefix'), 'StandardNetwork')]"
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "[variables('virtualNetworkName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templatelinks').networks]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[variables('virtualNetworkName')]"
                    },
                    "netNumber": {
                        "value": "[parameters('netNumber')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2015-01-01",
            "name": "[concat(parameters('namePrefix'), 'DC01')]",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "[variables('virtualNetworkName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templatelinks').winserver]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vmName": {
                        "value": "[concat(parameters('namePrefix'), 'DC01')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsername')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "virtualNetworkName": {
                        "value": "[variables('virtualNetworkName')]"
                    },
                    "subnetName": {
                        "value": "Internal"
                    }
                }
            }

        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-03-01",
            "name": "NewForest",
            "location": "westeurope",
            "dependsOn": [
                "[concat(parameters('namePrefix'), 'DC01')]"
            ],
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.19",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "ModulesUrl": "https://shared.blob.core.windows.net/windows-powershell-dsc/NewForest.ps1.zip?sp=r&st=2019-10-16T09:05:07Z&se=2020-10-16T17:05:07Z&spr=https&sv=2018-03-28&sig=K1WHiIBlrTftR9x3kap7pK1sM0V3Zbm%2FSaoiH48Wzsk%3D&sr=b",
                    "ConfigurationFunction": "NewForest.ps1\\NewForest",
                    "Properties": {
                        "DomainName": "[parameters('domainName')]",
                        "AdminCreds": {
                            "UserName": "[parameters('adminUsername')]",
                            "Password": "PrivateSettingsRef:AdminPassword"
                        }
                    }
                },
                "protectedSettings": {
                    "Items": {
                        "AdminPassword": "[parameters('adminPassword')]"
                    }
                }
            }
        }
    ]
}