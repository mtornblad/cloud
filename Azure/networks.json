{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "networkName": {
            "defaultValue": "MyNetwork",
            "type": "string",
            "metadata": {
                "description": "This is the name of the Virtual Network"
            }
        },
        "netNumber": {
            "defaultValue": "10.0",
            "type": "string",
            "metadata": {
                "description": "This is the two first octets in the network to create"
            }
        }
    },
    "variables": {
        "nsgName": "[concat(parameters('networkName'),'DefaultNSG')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-07-01",
            "name": "[parameters('networkName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[concat(parameters('netNumber'),'.0.0/16')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "internal",
                        "properties": {
                            "addressPrefix": "[concat(parameters('netNumber'),'.0.0/24')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName')]"
                            }
                        }
                    },
                    {
                        "name": "public",
                        "properties": {
                            "addressPrefix": "[concat(parameters('netNumber'),'.1.0/24')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName')]"
                            }
                        }
                    },
                    {
                        "name": "admin",
                        "properties": {
                            "addressPrefix": "[concat(parameters('netNumber'),'.2.0/24')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName')]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[variables('nsgName')]"
            ]
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[variables('nsgName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2019-07-01",
            "properties": {
                "securityRules": []
            }
        }
    ]
}