{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "networkName": {
            "defaultValue": "MyNetwork",
            "type": "string",
            "metadata": {
                "description": "This is the name of the Virtual Network"
            }
        },
        "netNumber": {
            "defaultValue": "10.0",
            "type": "string",
            "metadata": {
                "description": "This is the two first octets in the network to create"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-07-01",
            "name": "[parameters('networkName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[concat(parameters('netNumber'),'.0.0/16')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "internal",
                        "properties": {
                            "addressPrefix": "[concat(parameters('netNumber'),'.1.0/24')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'new-nsg')]"
                            }
                        }
                    },
                    {
                        "name": "public",
                        "properties": {
                            "addressPrefix": "[concat(parameters('netNumber'),'.2.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'new-nsg')]"
                            }
                        }
                    },
                    {
                        "name": "admin",
                        "properties": {
                            "addressPrefix": "[concat(parameters('netNumber'),'.0.0/24')]",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'new-nsg')]"
                            }
                        }
                    }
                ],
                "enableDdosProtection": false,
                "enableVmProtection": false
            },
            "dependsOn": [
                "new-nsg"
            ]
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "new-nsg",
            "location": "[resourceGroup().location]",
            "apiVersion": "2019-07-01",
            "properties": {
              "securityRules": [
                {
                  "name": "AllowVnetInBound",
                  "properties": {
                    "access": "Allow",
                    "description": "Allow inbound traffic from all VMs in VNET",
                    "destinationAddressPrefix": "VirtualNetwork",
                    "destinationPortRange": "*",
                    "direction": "Inbound",
                    "name": "AllowVnetInBound",
                    "priority": 65000,
                    "protocol": "*",
                    "sourceAddressPrefix": "VirtualNetwork",
                    "sourcePortRange": "*",
                  }
                }
              ]
            }
          }
    ]
}