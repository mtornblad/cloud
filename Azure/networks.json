{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    },
    "variables": {
        "networkName": "[concat(resourceGroup().name,'-StandardNetwork')]",
        "netNumber": "10.0",
        "location": "[resourceGroup().location]",
        "nsgName": "[concat(resourceGroup().name,'-StandardNSG')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-07-01",
            "name": "[variables('networkName')]",
            "location": "[variables('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[concat(variables('netNumber'),'.0.0/16')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "internal",
                        "properties": {
                            "addressPrefix": "[concat(variables('netNumber'),'.0.0/24')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                            }
                        }
                    },
                    {
                        "name": "public",
                        "properties": {
                            "addressPrefix": "[concat(variables('netNumber'),'.1.0/24')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                            }
                        }
                    },
                    {
                        "name": "admin",
                        "properties": {
                            "addressPrefix": "[concat(variables('netNumber'),'.2.0/24')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[variables('nsgName')]"
            ]
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[variables('nsgName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2019-07-01",
            "properties": {
                "securityRules": []
            }
        }
    ]
}